<?xml version = "1.0" encoding = "UTF-8" ?>
<!-- This is the root element of the application. It defines the xmlns (XML namespace) declarations for the .NET MAUI application. -->
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MAUISqlite"
             x:Class="MAUISqlite.App">
    <!-- This section defines the application-level resources. These resources can be accessed and reused throughout the application. -->
    <Application.Resources>
        <ResourceDictionary>
            <!-- This section contains merged dictionaries, which allow you to include multiple resource dictionaries in this application's resources. -->
            <ResourceDictionary.MergedDictionaries>

                <!-- This line includes a XAML resource dictionary file named "Colors.xaml" located in the "Resources/Styles" folder. -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />

                <!-- This line includes another XAML resource dictionary file named "Styles.xaml" located in the "Resources/Styles" folder. -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
